<h1 class="text-center my-4">Create a New Article</h1>

<!-- Display Error Messages -->
<% if @article.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<!-- Form for Creating New Article -->
<%= form_with model: @article, local: true, class: ' needs-validation' do |f| %>
  <div class="container">
    <div class="row">
      <!-- Title Field -->
      <div class="col-md-6 mb-3">
        <%= f.label :title, class: 'form-label' %>
        <%= f.text_field :title, class: 'form-control', required: true %>
      </div>

      <!-- Description Field -->
      <div class="col-md-6 mb-3">
        <%= f.label :description, class: 'form-label' %>
        <%= f.text_area :description, class: 'form-control', rows: 4, required: true %>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="text-center">
      <%= f.submit 'Create Article', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<!-- Back to Articles List Button -->
<div class="text-center mt-3">
  <%= link_to 'Back to Articles', articles_path, class: 'btn btn-secondary' %>
</div>
