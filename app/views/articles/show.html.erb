<h1 class="text-center my-4">Article</h1>

<!-- Article Details -->
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-body">
          <!-- Title -->
          <h2 class="card-title"><%= @article.title %></h2>

          <!-- Description -->
          <p class="card-text"><%= @article.description %></p>

          <!-- Action Buttons -->
          <div class="d-flex justify-content-between">
            <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-warning' %>
            <%= link_to 'Delete', @article, class: 'btn btn-danger btn-sm', data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this article?' } %>
          </div>

          <!-- Back Button -->
          <div class="text-center mt-3">
            <%= link_to 'Back to Articles', articles_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
